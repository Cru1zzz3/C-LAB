#define _CRT_SECURE_NO_WARNINGS 
#include <stdio.h> 
#define N 100 
char s[N]; 

void Endprog(void); 

char Enterarray(void) 
{ 
puts("Enter a string:" ); 
gets(s); 
} 

int main() 
{ 
int i,k=0; 
Enterarray(); 

for(i=0;s[i]!='\0';i++) 
{ 
if(s[i]=='.'||s[i]==','|| s[i]=='?'||s[i]=='!'||s[i]==':'||s[i]==';'||s[i]=='-') 
{ 
k++; 
printf("%c",s[i]); 
}} 
Endprog(k); 
return 0; 
} 

void Endprog(int k) 
{ 
printf("\nNumber of signs = %d\n",k); 
}
