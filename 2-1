
#include <stdio.h>
#include <math.h>
#define N 255 //макрос N с размерностью массива
#define L 'E' // макрос задающий заглавную букву
#define l 'e' // макрос задающий прописную букву
int i, k;
	i,k = 0;
char string[N]; //объявление массива(символов) как глобальной переменной
int input() //ф-ция заполнения массива значениями
{
	printf("Input string:\n");
	gets(string);
	return 0;
}

int main()//обработка массива согласно условию задания
{
	input();	
	if ((string[i] == L || string[i] == l))
		k++;
	for (i = 0; string[i] != '\0'; i++)
	{
		if ((string[i] == L || string[i] == l) && (string[i-1] == ' '))
			k++;
	}
	output();
	printf("Amount of words, which starting with letter %c is: %d\n",l,k);
	
	return 0;
}

int output()//ф-ция вывода на экран значений массива
{
	printf("%s", "Array: ");
	for (i = 0; string[i] != '\0'; i++)
	{
		printf("%c", string[i]);
	}
	printf("\n");
	return 0;
}
