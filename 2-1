#include <stdio.h>
#define N 255 
#define L 'E'
#define l 'e' 
int i, k;
	i,k = 0;
char string[N]; 
int input() 
{
	printf("Input string:\n");
	gets(string);
	return 0;
}
int main()
{
	input();	
	if ((string[i] == L || string[i] == l))
		k++;
	for (i = 0; string[i] != '\0'; i++)
	{
		if ((string[i] == L || string[i] == l) && (string[i-1] == ' '))
			k++;
	}
	output();
	return 0;
}
int output()
{
	printf("\n");
	printf("Amount of words, which starting with letter %c is: %d\n",l,k);
	printf("\n");
	return 0;
}
