#define _CRT_SECURE_NO_WARNINGS // штука, чтобы scanf работал без проблем
#include <stdio.h> // подключаем библиотеку
#define N 5 // количество элементов массива
int input (int array[N]); // инициализируем функцию ввода массива
void output (int array[N], int k); // инициализируем функцию вывода массива

int input (int array[N]) // функция со входным параметром в качестве массива 
{   
	int i,k; // создаём  локальные переменные
	k=0;	// инициализируем переменную k
	for (i=0;i!=N;i++) //Цикл для считывания в массив
	{
		scanf("%d", &array[i]); // Считывает с клавиатуры в массив
		k=k+(array[i]); // Суммирует введёные элементы
	}
	printf("\n"); //  делаем отступ в консоли, чтоб было красиво
	return k; // Возвращает сумму введённых элементов и закрывает подпрограмму input
}

void output (int array[N],int k) //функция вывода массива с 2мя входными параметрами (массив который хотим вывести, количество символов выводимых массивом) ((т.е если у нас входные параметры 1 2 3 4 5,  то среднее будет 3, сумма будет 15, элеметы строго больше среднего 4 и 5, количество выводимых элементов 2 (4 и 5 соответственно)))
{   int i; // создаём локальную переменную
	for (i=0;i!=k;i++)
	{
		printf("%d ", array[i]);
	}
	printf("\n");
}

int main()
{ 
	int i,k,sr;
	
	int array1[N]; // создаём  1 массив (внутри находится мусор)
    int array2[N]; // создаём  2 массив (внутри находится мусор)
	k=input(array1); // Возвр
	sr=k/N;
	k=0;
	for (i=0;i!=N;i++) // цикл, который дублирует массив1 в массив2
	{	
		if(array1[i]>sr) // 1 массив используется в качестве сравнения со средним значением, если элемент больше среднего, то
		{
			array2[k]=array1[i]; // .., то копирует элемент во 2 массив
			k++;	// переводит каретку второго массива на следующий элемент
		}
	}
	
	
	output(array2,k); // функция вывода массива в консоль с 2мя входными параметрами
	return 0; //закрытие функции main
}
